<%- include("header"); -%>

<div class="box" id="heading">
  <h1><%=Title%></h1>
</div>

<div class="box">
  <%newListItem.forEach((item)=>{%>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=item._id%>"
        onChange="this.form.submit()"
      />
      <p><%=item.name%></p>
    </div>
    <input type="hidden" name="listname" value="<%=Title%>" />
  </form>
  <%})%>
  <form class="item" action="/" method="post">
    <input type="text" name="inp" placeholder="New Item" autocomplete="off" />
    <button type="submit" name="list" value="<%=Title%>">+</button>
  </form>
</div>
<%- include("footer"); -%>
